//- ===============================================
//-     Global  Variables
//- ===============================================
block variables
  - var CWD = '';
  - var attrsHtml = { lang: `${ dir === 'rtl' ? 'ar' : 'en-US'}`, dir: dir || 'ltr' };
  - var title = 'applab| Landing, Corporate & Business Template';
  - var attrsBody = {};
  - var attrsMain = {};
  - var attrsLayout = {};
  - var APIGmap = 'AIzaSyARdVcREeBK44lIWnv5-iPijKqvlSAVwbw';


//- ===============================================
//-     Basic Modules
//- ===============================================
include ../mixins/core/Functions
include ../mixins/core/Background
include ../mixins/core/Section
include ../mixins/core/ThemeStyle


doctype html
html()&attributes(attrsHtml)
  head

    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible' content='IE=edge')
      meta(name='viewport' content='width=device-width, initial-scale=1')


    = '\n\n'
    // ===============================================
    //    Document Title
    // ===============================================
    title=title


    = '\n\n'
    // ===============================================
    //    Favicons
    // ===============================================
    block favicon
      //link(rel="apple-touch-icon" sizes="180x180", href=`${CWD}assets/img/favicons/apple-touch-icon.png`)
      //link(rel="icon" type="image/png" sizes="32x32", href=`${CWD}assets/img/favicons/favicon-32x32.png`)
      //link(rel="icon" type="image/png" sizes="16x16", href=`${CWD}assets/img/favicons/favicon-16x16.png`)
      link(rel="shortcut icon" type="image/x-icon", href=`${CWD}assets/img/redstone-logo.svg`)
      link(rel="manifest", href=`${CWD}assets/img/favicons/manifest.json`)
      meta(name="theme-color" content="#ffffff")


    block headScripts
      script(async src="https://www.googletagmanager.com/gtag/js?id=G-FT767HW5C2")
      script.
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-FT767HW5C2');
      script(src='https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?skin=sons-of-obsidian')
      

    = '\n\n'
    // ===============================================
    //    Stylesheets
    // ===============================================

    block styles
      link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/cookieconsent/3.1.1/cookieconsent.min.css")
      +ThemeStyle


  = '\n\n'
  body()&attributes(attrsBody)

    block beforeMainContent

    = '\n'
    // ===============================================
    //    Main Content
    // ===============================================
    main()&attributes(attrsMain)
      block mainContent
    // ===============================================
    //    End of Main Content
    // ===============================================
    = '\n\n'

    block afterMainContent

    = '\n\n'
    // ===============================================
    //    JavaScripts
    // ===============================================
    script(src=`${CWD}vendors/@popperjs/popper.min.js`)
    script(src=`${CWD}vendors/bootstrap/bootstrap.min.js`)
    script(src=`${CWD}vendors/is/is.min.js`)
    script(src=`${CWD}vendors/@lottiefiles/lottie-player.js`)
    script(src="https://cdnjs.cloudflare.com/ajax/libs/cookieconsent/3.1.1/cookieconsent.min.js")

    block scripts

      script(src=`${CWD}assets/js/theme.js`)

    = '\n'

    block footerStyles
