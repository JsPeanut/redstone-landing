mixin NavbarApplab
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3(data-navbar-on-scroll)
    .container
      
      a.navbar-brand.d-flex.align-items-center.fw-bold.fs-2(href='index.html')
        img(src=`${CWD}assets/img/redstone-logo-full.svg` width='175' alt='')
      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon

      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0
          //li.nav-item(data-anchor)
          //  a.nav-link.fw-medium(aria-current='page', href='#home' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item(data-anchor).mx-lg-2
            a.nav-link.fw-medium.text-end.text-lg-center.text-primary(href='#features') Features
          li.nav-item(data-anchor).mx-lg-2
            a.nav-link.fw-medium.text-end.text-lg-center.text-primary(href='#api') Accessing Data
          li.nav-item(data-anchor).mx-lg-2
            a.nav-link.fw-medium.text-end.text-lg-center.text-primary(href='#faq') FAQ  
          li.nav-item(data-anchor).mx-lg-2
            a.nav-link.fw-medium.text-end.text-lg-center.text-primary(href='#about') About us          
          li.nav-item(data-anchor).mx-lg-2
            a.nav-link.fw-medium.text-end.text-lg-center.text-primary(href='#contact') Contact  

        form.ps-lg-5.text-end.text-lg-center.mt-3.mt-lg-0
          a(href='https://app.redstone.finance' target='_blank').button.btn.btn-lg.btn-danger.rounded-pill.order-0 See our data
